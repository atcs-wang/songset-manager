<%# Required locals = {
    category: {categoryId, categoryName, songCount}
}
%>

<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../../partials/stdhead') %>


    <!-- Additional custom CSS -->
    <link rel="stylesheet" href="/stylesheets/assignmentsStyle.css">

</head>

<body>

    <%- include('../../partials/navbar') %>
    
    <!-- Actual page content! -->
    <div class="container">
        <h1 class="center-align">Are you CERTAIN you want to delete the category <nobr><strong><%= category.categoryName %></strong>?</nobr></h1>
        <h2 class="center-align"><%= category.songCount %> songs will no longer be categorized as <%= category.categoryName %></h2>
        <div class="center-align">
            <%- include('../../partials/postbutton', {formconfig : {url: `/songs/category/${category.categoryId}/delete`, 
                buttonText: "Yes, really delete", 
                buttonIcon: "warning", 
                buttonStyle: "btn-large waves-effect waves-light red",
                inline: false
            }}) %>
        </div>
        <h2 class="center-align">Alternatively, you can rename this category.</h2>

        <div class="center-align">
            <a class="btn-large waves-effect waves-light orange left modal-trigger" href="#add">
                <i class="material-icons right">add</i>
                Rename the category instead
            </a>
        </div>

        <div class="section" id="controls">

        </div>


        <div class="modal" id="add">

            <div class="modal-content">

                <%-  include('partials/songcatform', {formconfig : {id:"addCategoryForm", url:'/songs/category/${category.songId}/update', submitButton: false, category}}) %>
                <!-- A section for the footer of the modal -->
                <div class="modal-footer">
                    <!-- Since the submit button is not within the form, it must have the form attribute specified-->
                    <button class="btn waves-effect waves-light " type="submit" form="addCategoryForm">
                        <i class="material-icons right">send</i>
                        Rename Category
                    </button>
                    <button class="modal-close waves-effect waves-green btn-flat" >Never Mind</button>
                </div>
                
            </div>

        </div>

    </div>

    <%- include('../../partials/stdfoot') %>

</body>

</html>